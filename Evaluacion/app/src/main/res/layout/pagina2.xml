<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview4"
        android:layout_marginTop="35dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        card_view:cardCornerRadius="4dp"
        android:elevation="20dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imagen4"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp"/>
            <TextView
                android:id="@+id/titulo4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="@string/titulo"
                android:textSize="20dp"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/imagen4" />
            <TextView
                android:id="@+id/text4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/titulo4"
                android:text="@string/texto"
                android:textSize="15dp"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/imagen4" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/cardview5"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        card_view:cardCornerRadius="4dp"
        android:elevation="20dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imagen5"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp"/>
            <TextView
                android:id="@+id/titulo5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="@string/titulo"
                android:textSize="20dp"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/imagen5" />
            <TextView
                android:id="@+id/text5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/titulo5"
                android:text="@string/texto"
                android:textSize="15dp"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/imagen5" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/cardview6"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        card_view:cardCornerRadius="4dp"
        android:elevation="20dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imagen6"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp"/>
            <TextView
                android:id="@+id/titulo6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="@string/titulo"
                android:textSize="20dp"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/imagen6" />
            <TextView
                android:id="@+id/text6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/titulo6"
                android:text="@string/texto"
                android:textSize="15dp"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/imagen6"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>