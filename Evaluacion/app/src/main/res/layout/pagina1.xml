<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview1"
        android:layout_marginTop="35dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        card_view:cardCornerRadius="4dp"
        android:elevation="20dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imagen1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp"/>
            <TextView
                android:id="@+id/titulo1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="@string/titulo"
                android:textSize="20dp"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/imagen1" />
            <TextView
                android:id="@+id/texto1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/titulo1"
                android:text="@string/texto"
                android:textSize="15dp"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/imagen1" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/cardview2"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        card_view:cardCornerRadius="4dp"
        android:elevation="20dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imagen2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp"/>
            <TextView
                android:id="@+id/titulo2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="@string/titulo"
                android:textSize="20dp"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/imagen2" />
            <TextView
                android:id="@+id/text2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/titulo2"
                android:text="@string/texto"
                android:textSize="15dp"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/imagen2" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/cardview3"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        card_view:cardCornerRadius="4dp"
        android:elevation="20dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imagen3"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="10dp"
                android:layout_alignParentTop="true"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_launcher"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="15dp"/>
            <TextView
                android:id="@+id/titulo3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="@string/titulo"
                android:textSize="20dp"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/imagen3" />
            <TextView
                android:id="@+id/text3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/titulo3"
                android:text="@string/texto"
                android:textSize="15dp"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/imagen3" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>